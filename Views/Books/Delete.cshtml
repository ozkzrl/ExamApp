@model MyMvcExamProject.Models.Book

@{
    ViewData["Title"] = "Silme Onayı";
}

<h2>@ViewData["Title"]</h2>

<h3>Kitap: @Model.Title</h3>

<p>Bu kitabı silmek istediğinizden emin misiniz?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Evet, sil</button>
    <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Hayır, geri dön</a>
</form>
