@model List<MyMvcExamProject.Models.Book>

<h2>Kitap Listesi</h2>

<!-- Arama Formu -->
<form asp-controller="Books" asp-action="Index" method="get" style="margin-bottom:15px;">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Kitap adına göre ara..." />
        <button type="submit" class="btn btn-info">Ara</button>
    </div>
</form>

<a asp-controller="Books" asp-action="Create" class="btn btn-success" style="margin-bottom:15px;">Kitap Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Yıl</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Düzenle</a>

                    <form method="post" asp-action="Delete" asp-controller="Books" asp-route-id="@book.Id" style="display:inline;">
                        <input type="submit" value="Sil" class="btn btn-danger" />
                    </form>

                    <a asp-controller="Exam" asp-action="Index" asp-route-bookId="@book.Id" class="btn btn-warning" style="margin-left:5px;">
                        Sınava Gir
                    </a>


                    <a asp-controller="Question" asp-action="Index" asp-route-bookId="@book.Id" class="btn btn-warning" style="margin-left:5px;">
                     Soruları Yönet
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
