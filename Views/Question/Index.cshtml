@model List<MyMvcExamProject.Models.Question>

@{
    ViewBag.Title = "Sorular Listesi";
    var book = ViewBag.Book;
}

<h2>@book.Title kitabı için Sorular</h2>

<a asp-action="Create" asp-route-bookId="@book.Id" class="btn btn-success mb-3">Yeni Soru Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Soru Metni</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@question.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
