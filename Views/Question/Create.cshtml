@model MyMvcExamProject.Models.Question

@{
    ViewBag.Title = "Yeni Soru Ekle";
    var bookId = ViewBag.BookId;
}

<h2>Yeni Soru Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="BookId" value="@bookId" />

    <div class="form-group mb-3">
        <label for="Text">Soru Metni:</label>
        <textarea name="Text" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Şıklar:</label>
        @for (int i = 0; i < 4; i++)
        {
            <input type="text" name="options" class="form-control mb-2" placeholder="Şık @(i+1)" required />
        }
    </div>

    <div class="form-group mb-3">
        <label>Doğru Şık Seç:</label>
        <select name="correctOptionIndex" class="form-control" required>
            <option value="0">Şık 1</option>
            <option value="1">Şık 2</option>
            <option value="2">Şık 3</option>
            <option value="3">Şık 4</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Soru Kaydet</button>
</form>

<br />
<a asp-action="Index" asp-route-bookId="@bookId" class="btn btn-secondary">Geri Dön</a>
